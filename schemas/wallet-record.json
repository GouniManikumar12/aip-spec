{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://aip.org/schemas/wallet-record.json",
  "title": "WalletRecord",
  "description": "Represents a participant's wallet including available and reserved balances. All amounts in USD micros (1 USD = 1,000,000 micros).",
  "type": "object",
  "required": [
    "wallet_id",
    "owner_type",
    "currency",
    "balance_micros",
    "lifetime_spend_micros",
    "updated_at"
  ],
  "properties": {
    "wallet_id": {
      "type": "string",
      "description": "Unique wallet identifier",
      "example": "wal_105"
    },
    "owner_type": {
      "type": "string",
      "enum": ["brand_agent", "operator", "platform"],
      "description": "Entity that owns this wallet",
      "example": "brand_agent"
    },
    "currency": {
      "type": "string",
      "pattern": "^[A-Z]{3}$",
      "description": "ISO currency code (always USD)",
      "enum": ["USD"],
      "example": "USD"
    },
    "balance_micros": {
      "type": "integer",
      "minimum": 0,
      "description": "Funds available for new auctions (in USD micros, int64)",
      "example": 2500000000
    },
    "reserved_micros": {
      "type": "integer",
      "minimum": 0,
      "description": "Funds reserved for pending auctions (in USD micros, int64). Optional - only used if reservation policy is enabled.",
      "example": 50000000
    },
    "lifetime_spend_micros": {
      "type": "integer",
      "minimum": 0,
      "description": "Total lifetime spend charged from this wallet (in USD micros, int64)",
      "example": 1275000000
    },
    "updated_at": {
      "type": "string",
      "format": "date-time",
      "description": "Last update timestamp",
      "example": "2025-11-12T02:00:00Z"
    },
    "ext": {
      "$ref": "./common.json#/definitions/extensionNamespace"
    }
  }
}
